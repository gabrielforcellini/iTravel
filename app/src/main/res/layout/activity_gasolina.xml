<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/geral_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/lbl_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quilometragem"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edt_km"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_dark"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lbl_qtd_dias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Média por Litro"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/edt_media_litro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_dark"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lbl_custo_litro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custo Médio por Litro"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edt_custo_litro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_dark"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lbl_total_veic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total de veículos"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edt_total_veic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_dark"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/lbl_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edt_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray_dark"
        android:textSize="24sp"
        android:inputType="none"
        android:layout_marginBottom="46dp"/>

    <Button
        android:id="@+id/btn_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="PRÓXIMO"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/light_gray_dark"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTravel"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>