<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/geral_background"
    android:padding="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/lbl_controle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controle de gastos"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/check_box_gasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gasolina"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/check_box_tarifa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarifa Aérea"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/check_box_refeicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refeições"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/check_box_hospedagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospedagem"
        android:textColor="@android:color/white"/>

    <CheckBox
        android:id="@+id/check_box_entretenimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entretenimento"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VOLTAR"
            android:layout_marginRight="25dp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/light_gray_dark"
            android:layout_gravity="center_horizontal"
            android:layout_weight="50"
            />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="FINALIZAR"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/light_gray_dark"
            android:layout_gravity="center_horizontal"
            android:layout_weight="50"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iTravel"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>